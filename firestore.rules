rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // JPC Users - allow authenticated users to read all, write their own
    match /jpc_users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // JPC Videos - public read, authenticated write (for now)
    match /jpc_videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Articles - public read, authenticated write (for now)
    match /jpc_articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Categories - public read, authenticated write (for now)
    match /jpc_categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Products - public read, authenticated write (for now)
    match /jpc_products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Analytics - public write (for tracking), authenticated read
    match /jpc_analytics/{eventId} {
      allow create: if true;
      allow read: if request.auth != null;
    }

    // JPC Protocols - users can read/write their own saved protocols
    match /jpc_protocols/{protocolId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // JPC Assessments - anyone can create (for initial submission), authenticated can update
    match /jpc_assessments/{assessmentId} {
      // Anyone can create an assessment (before they have an account)
      allow create: if true;
      // Authenticated users can read their own claimed assessments
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Authenticated users can update (to claim the assessment after email verification)
      allow update: if request.auth != null;
    }

    // Peptide Reference - public read, admin write only
    match /peptide_reference/{peptideId} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
    }

    // User Protocols - users read own, cloud function creates
    match /user_protocols/{protocolId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if true;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // JPC CRM - public create (waitlist/assessment), admin read/write
    match /jpc_crm/{contactId} {
      allow create: if true;
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
      allow update: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
    }

    // JPC Settings - public read (for launch toggle), admin write
    match /jpc_settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
    }

    // JPC Subscriptions - users can read/write their own, admins can read all
    match /jpc_subscriptions/{subscriptionId} {
      // Users can read their own subscriptions
      allow read: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true);
      // Authenticated users can create subscriptions for themselves
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      // Users can update their own subscriptions (e.g., cancel)
      allow update: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true);
      // Only admins can delete subscriptions
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/jpc_users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
