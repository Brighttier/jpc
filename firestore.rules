rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // JPC Users - allow authenticated users to read all, write their own
    match /jpc_users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // JPC Videos - public read, authenticated write (for now)
    match /jpc_videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Articles - public read, authenticated write (for now)
    match /jpc_articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Categories - public read, authenticated write (for now)
    match /jpc_categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Products - public read, authenticated write (for now)
    match /jpc_products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // JPC Analytics - public write (for tracking), authenticated read
    match /jpc_analytics/{eventId} {
      allow create: if true;
      allow read: if request.auth != null;
    }
  }
}
